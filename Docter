  <!-- ========== Modal (Plan Selection) ========== -->
  <div class="modal-backdrop" id="modal" aria-hidden="true" aria-labelledby="modal-title" role="dialog" aria-modal="true">
    <div class="modal" role="document">
      <header>
        <h3 id="modal-title">Start your plan</h3>
        <button class="close-btn" id="modal-close" aria-label="Close dialog">✕</button>
      </header>
      <div class="row">
        <label for="plan">Choose plan</label>
        <select id="plan" class="select" aria-label="Plan">
          <option>Basic</option>
          <option selected>Growth</option>
          <option>Scale</option>
        </select>

        <label for="email">Email</label>
        <input id="email" class="field" type="email" placeholder="you@example.com" autocomplete="email" required aria-required="true" />
      </div>
      <div class="actions">
        <button class="btn" id="modal-cancel">Cancel</button>
        <button class="btn btn-primary" id="modal-submit">Continue</button>
      </div>
      <p id="modal-msg" class="muted" role="status" aria-live="polite" style="margin:.5rem 0 0"></p>
    </div>
  </div>

  <script>
    // ========== Small, vanilla, performance-minded JS (no deps) ==========
    (function(){
      const $ = s => document.querySelector(s);
      const $$ = s => document.querySelectorAll(s);

      // Current year
      $('#year').textContent = new Date().getFullYear();

      // Mobile menu toggle
      const burger = document.querySelector('.hamburger');
      const menu = $('#menu');
      if(burger && menu){
        burger.addEventListener('click', () => {
          const open = menu.style.display === 'flex';
          menu.style.display = open ? 'none' : 'flex';
          burger.setAttribute('aria-expanded', String(!open));
        });
        // Close on link click
        menu.querySelectorAll('a').forEach(a => a.addEventListener('click', () => {
          if(window.innerWidth <= 680){ menu.style.display = 'none'; burger.setAttribute('aria-expanded','false'); }
        }));
      }

      // Smooth scroll (fallback for browsers without CSS smooth)
      document.addEventListener('click', (e) => {
        const a = e.target.closest('a[href^="#"]');
        if(!a) return;
        const id = a.getAttribute('href').slice(1);
        if(!id) return;
        const el = document.getElementById(id);
        if(el){
          e.preventDefault();
          el.scrollIntoView({behavior:'smooth',block:'start'});
        }
      });

      // Newsletter validation
      const newsForm = $('#newsletter');
      if(newsForm){
        newsForm.addEventListener('submit', (e) => {
          e.preventDefault();
          const email = newsForm.email.value.trim();
          const msg = $('#news-msg');
          if(!/^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(email)){
            msg.textContent = 'Please enter a valid email address.';
            msg.style.color = '#ef4444';
            newsForm.email.focus();
            return;
          }
          msg.textContent = 'Thanks! Check your inbox for a confirmation.';
          msg.style.color = '#10b981';
          newsForm.reset();
        });
      }

      // Hover scale for plan cards (respect reduced motion)
      const preferNoMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;
      if(!preferNoMotion){
        $$('.plan').forEach(card => {
          card.addEventListener('mouseenter',()=> card.style.transform='scale(1.02)');
          card.addEventListener('mouseleave',()=> card.style.transform='scale(1)');
          card.style.transition='transform .25s ease';
        });
      }

      // Modal logic
      const modal = $('#modal');
      const planSelect = $('#plan');
      const emailInput = $('#email');
      const modalMsg = $('#modal-msg');
      const openModal = (plan) => {
        if(plan){ planSelect.value = plan; }
        modal.style.display = 'flex';
        modal.setAttribute('aria-hidden','false');
        emailInput.focus();
        // Trap focus
        const focusable = modal.querySelectorAll('button,[href],input,select,textarea,[tabindex]:not([tabindex="-1"])');
        const first = focusable[0], last = focusable[focusable.length-1];
        const trap = (e) => {
          if(e.key !== 'Tab') return;
          if(e.shiftKey && document.activeElement === first){ last.focus(); e.preventDefault(); }
          else if(!e.shiftKey && document.activeElement === last){ first.focus(); e.preventDefault(); }
        };
        modal.addEventListener('keydown', trap);
        modal.dataset.trap='1';
      };
      const closeModal = () => {
        modal.style.display = 'none';
        modal.setAttribute('aria-hidden','true');
        modalMsg.textContent = '';
        // Remove trap
        if(modal.dataset.trap){ modal.removeEventListener('keydown',()=>{}); delete modal.dataset.trap; }
      };
      $$('.cta').forEach(btn=>{
        btn.addEventListener('click', (e)=>{
          const p = btn.dataset.plan || 'Growth';
          // If it's an anchor to #pricing allow scroll for non-modal CTAs in hero/sections
          if(btn.tagName === 'A' && btn.getAttribute('href') && btn.getAttribute('href').startsWith('#') && !btn.closest('.plans')){
            return; // normal anchor behavior
          }
          e.preventDefault();
          openModal(p);
        });
      });
      $('#modal-close')?.addEventListener('click', closeModal);
      $('#modal-cancel')?.addEventListener('click', closeModal);
      modal?.addEventListener('click', (e)=>{ if(e.target === modal) closeModal(); });
      document.addEventListener('keydown', (e)=>{ if(e.key==='Escape' && modal?.style.display==='flex') closeModal(); });

      // Modal submit
      $('#modal-submit')?.addEventListener('click', ()=>{
        const email = emailInput.value.trim();
        if(!/^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(email)){
          modalMsg.textContent = 'Enter a valid email to continue.';
          modalMsg.style.color = '#ef4444';
          emailInput.focus();
          return;
        }
        modalMsg.textContent = 'Great! Redirecting to checkout...';
        modalMsg.style.color = '#10b981';
        setTimeout(()=>{ closeModal(); alert('Demo: Checkout would start for ' + planSelect.value + ' with ' + email); }, 600);
      });

      // Lazy load any non-critical images (placeholders already have data URIs)
      document.querySelectorAll('img[loading="lazy"]').forEach(img=>{
        // Native lazy supported; no extra JS needed — this is a stub if you later swap to real URLs.
      });
    })();
  </script>
</body>
</html>
